@model WebBooking.Models.NhanVien
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Login Admin</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Areas/Admin/css/login/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/css/login/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/css/login/icon-font.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/css/login/animate.css" rel="stylesheet" />
    <link href="~/Areas/Admin/css/login/hamburgers.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/css/login/animsition.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/css/login/select2.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/css/login/daterangepicker.css" rel="stylesheet" />
    <link href="~/Areas/Admin/css/login/main.css" rel="stylesheet" />
    <link href="~/Areas/Admin/css/login/util.css" rel="stylesheet" />
    <!--===============================================================================================-->
</head>
@using (Html.BeginForm("Login", "Manager", FormMethod.Post, new { area = "Admin", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <body>
        <div class="limiter">
            <div class="container-login100">
                <div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-50">
                    <form class="login100-form validate-form">
                        <span class="login100-form-title p-b-33">
                            Account Login
                        </span>
                        <div class="text-danger text-center">@ViewBag.Message</div>
                        @*@using (Html.BeginForm("Index", "Login", "Admin", FormMethod.Post))*@
                        <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                            @Html.EditorFor(model => model.emailNV, new { htmlAttributes = new { @class = "input100", @placeholder = "User name" } })
                            <span class="focus-input100-1"></span>
                            <span class="focus-input100-2"></span>
                        </div>

                        <div class="wrap-input100 rs1 validate-input" data-validate="Password is required">
                            @Html.EditorFor(model => model.passwordNV, new { htmlAttributes = new { @class = "input100", @type = "password", @placeholder = "Password" } })
                            <span class="focus-input100-1"></span>
                            <span class="focus-input100-2"></span>
                        </div>

                        <div class="container-login100-form-btn m-t-20">
                            <input type="submit" class="login100-form-btn" value="Sign in" />
                        </div>

                        <div class="text-center p-t-45 p-b-4">
                            <span class="txt1">
                                Forgot
                            </span>

                            <a href="#" class="txt2 hov1">
                                Username / Password?
                            </a>
                        </div>

                        <div class="text-center">
                            <span class="txt1">
                                Create an account?
                            </span>

                            <a href="#" class="txt2 hov1">
                                Sign up
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <script src="~/Areas/Admin/js/login/jquery-3.2.1.min.js"></script>
        <script src="~/Areas/Admin/js/login/animsition.min.js"></script>
        <script src="~/Areas/Admin/js/login/popper.js"></script>
        <script src="~/Areas/Admin/js/login/bootstrap.min.js"></script>
        <script src="~/Areas/Admin/js/login/select2.min.js"></script>
        <script src="~/Areas/Admin/js/login/moment.min.js"></script>
        <script src="~/Areas/Admin/js/login/daterangepicker.js"></script>
        <script src="~/Areas/Admin/js/login/countdowntime.js"></script>
        <script src="~/Areas/Admin/js/login/main.js"></script>
    </body>
}
</html>

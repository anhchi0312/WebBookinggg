                    </div>
                    @if (@Session["TenNhanVien"].ToString() != "")
                    {
                        <div class="top-menu d-flex align-items-center">
                            <div>@Session["TenNhanVien"].ToString()</div>
                            <div class="dropdown">
                                <a class="dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><img class="avatar" src="~/Areas/Admin/img/user.jpg" alt=""></a>

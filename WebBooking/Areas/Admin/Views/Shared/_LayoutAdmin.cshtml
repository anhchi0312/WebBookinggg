                            <div class="nav-lavel">QUẢN LÝ KHÁCH HÀNG</div>
                            <div class="nav-item active">
                                @Html.ActionLink("Danh sách khách hàng", "Index", "Customers")
                            </div>
                            <div class="nav-item">
                                <a href="@Url.Action("New","Customers")"><span>Khách hàng mới</span> <span class="badge badge-success">New</span></a>
                            </div>
                            <div class="nav-item has-sub">
                                <a href="@Url.Action("Vip","Customers")"><span>Khách hàng Vip</span> <span class="badge badge-danger">Vip</span></a>

                            </div>
                            <div class="nav-lavel">QUẢN LÝ DỊCH VỤ</div>

                            <div class="nav-item has-sub">
                                @Html.ActionLink("Danh sách đơn đặt dịch vụ", "Index", "DatGoisAdmin")
                            </div>
                            @*<div class="nav-item has-sub">
                                    <a href="#"><span>Đơn đặt dịch vụ thường</span></a>
                                </div>
                                <div class="nav-item has-sub">
                                    <a href="#"><span>Đơn đặt dịch vụ Vip</span> <span class="badge badge-danger">Vip</span></a>
                                </div>*@
                        </nav>
                    </div>
                </div>
            </div>
            <div class="main-content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>
            <footer class="footer">
                <div class="w-100 clearfix">
                    <span class="text-center text-sm-left d-md-inline-block">Copyright © 2020 </span>
                    <span class="float-none float-sm-right mt-1 mt-sm-0 text-center">Crafted with by <a href="" class="text-danger">Ánh</a></span>
                </div>
            </footer>

        </div>

@model IEnumerable<WebBooking.Models.Goi>

@{
    ViewBag.Title = "Quản lý gói Thai sản";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Tạo gói mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GoiName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Note)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Img)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.GoiName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Note)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Img)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.GoiId }) |
            @Html.ActionLink("Details", "Details", new { id=item.GoiId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.GoiId })
        </td>
    </tr>
}

</table>

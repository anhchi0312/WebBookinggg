            @Html.DisplayFor(modelItem => item.GoiName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerId)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Note)
        </td>
        <td>
